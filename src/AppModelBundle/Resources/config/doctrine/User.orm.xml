<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity repository-class="AppModelBundle\Entity\UserRepository" name="AppModelBundle\Entity\User" table="usuario" >
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        
        <field name="picture" type="text" column="picture" nullable="1"/>
        <field name="age" type="integer" column="age" nullable="1"/>
        
        <one-to-many field="sociales" target-entity="AppModelBundle\Entity\Social" mapped-by="usuario" orphan-removal="true">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
        
        <one-to-many field="tarifas" target-entity="AppModelBundle\Entity\Tarifa" mapped-by="usuario" orphan-removal="true">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
        
        <one-to-many field="procesosJuridicos" target-entity="AppModelBundle\Entity\ProcesoJuridico" mapped-by="usuario" orphan-removal="true">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>

        <one-to-many field="proteccionSeguridades" target-entity="AppModelBundle\Entity\ProteccionSeguridad" mapped-by="usuario" orphan-removal="true">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
        
        <one-to-many field="nivelEducativos" target-entity="AppModelBundle\Entity\NivelEducativoUsuario" mapped-by="usuario" orphan-removal="true">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
        
        <many-to-one field="tipoUsuario" target-entity="AppModelBundle\Entity\TipoUsuario" inversed-by="usuarios" orphan-removal="true">
            <join-column name="tipo_usuario_id" referenced-column-name="id" on-delete="restrict" on-update="cascade" nullable="0"/>
        </many-to-one>
                                
    </entity>
</doctrine-mapping>
