<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="AppModelBundle\Entity\UsuarioRepository" name="AppModelBundle\Entity\Usuario" table="usuario">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    
    <field name="nombres" type="string" column="nombres" length="90"/>
    <field name="apellidos" type="string" column="apellidos" length="90"/>
    <field name="nombreUsuario" type="string" column="nombre_usuario" length="90"/>
    <field name="edad" type="integer" column="edad" nullable="1"/>
    <field name="correoElectronico" type="string" column="correo_electronico" length="50"/>
    <field name="foto" type="string" column="foto" length="255" nullable="1"/>
    <field name="fechaCreacion" type="datetime" column="fecha_creacion"/>
    
    <one-to-many field="sociales" target-entity="AppModelBundle\Entity\Social" mapped-by="usuario" orphan-removal="true">
        <cascade>
            <cascade-persist/>
        </cascade>
    </one-to-many>

    <one-to-many field="tarifas" target-entity="AppModelBundle\Entity\Tarifa" mapped-by="usuario" orphan-removal="true">
        <cascade>
            <cascade-persist/>
        </cascade>
    </one-to-many>

    <one-to-many field="procesosJuridicos" target-entity="AppModelBundle\Entity\ProcesoJuridico" mapped-by="usuario" orphan-removal="true">
        <cascade>
            <cascade-persist/>
        </cascade>
    </one-to-many>

    <one-to-many field="proteccionSeguridades" target-entity="AppModelBundle\Entity\ProteccionSeguridad" mapped-by="usuario" orphan-removal="true">
        <cascade>
            <cascade-persist/>
        </cascade>
    </one-to-many>

    <one-to-many field="nivelEducativos" target-entity="AppModelBundle\Entity\NivelEducativoUsuario" mapped-by="usuario" orphan-removal="true">
        <cascade>
            <cascade-persist/>
        </cascade>
    </one-to-many>

    <many-to-one field="tipoUsuario" target-entity="AppModelBundle\Entity\TipoUsuario" inversed-by="usuarios" orphan-removal="true">
        <join-column name="tipo_usuario_id" referenced-column-name="id" on-delete="restrict" on-update="cascade" nullable="0"/>
    </many-to-one>
    
  </entity>
</doctrine-mapping>
