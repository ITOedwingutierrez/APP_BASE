<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="AppModelBundle\Entity\NivelRepository" name="AppModelBundle\Entity\Nivel" table="nivel">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    
    <field name="nombre" type="string" column="nombre" length="100"/>
    <field name="fechaCreacion" type="datetime" column="fecha_creacion"/>
    
    <one-to-many field="procesoJuridicosUsuario" target-entity="AppModelBundle\Entity\ProcesoJuridico" mapped-by="nivel" orphan-removal="true">
        <cascade>
            <cascade-persist/>
        </cascade>
    </one-to-many>
    
    <one-to-many field="proteccionSeguridades" target-entity="AppModelBundle\Entity\ProteccionSeguridad" mapped-by="nivel" orphan-removal="true">
        <cascade>
            <cascade-persist/>
        </cascade>
    </one-to-many>
    
  </entity>
</doctrine-mapping>
