<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="AppModelBundle\Entity\ProcesoJuridicoRepository" name="AppModelBundle\Entity\ProcesoJuridico" table="proceso_juridico">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    
    <field name="descripcion" type="text" column="descripcion" length="1200" nullable="0"/>
    <field name="documento" type="text" column="documento" length="300"/>
    <field name="valido" type="boolean" column="valido"/>
    <field name="fechaCreacion" type="datetime" column="fecha_creacion" nullable="0"/>
    
    <many-to-one field="usuario" target-entity="AppModelBundle\Entity\Usuario" inversed-by="procesosJuridicos" orphan-removal="true">
        <join-column name="usuario_id" referenced-column-name="id" on-delete="restrict" on-update="cascade" nullable="1"/>
    </many-to-one>
    
    <many-to-one field="tipoProcesoJuridico" target-entity="AppModelBundle\Entity\TipoProcesoJuridico" inversed-by="procesoJuridicosUsuario" orphan-removal="true">
        <join-column name="proceso_juridico_id" referenced-column-name="id" on-delete="restrict" on-update="cascade" nullable="0"/>
    </many-to-one>
    
    <many-to-one field="nivel" target-entity="AppModelBundle\Entity\Nivel" inversed-by="procesoJuridicosUsuario" orphan-removal="true">
        <join-column name="nivel_id" referenced-column-name="id" on-delete="restrict" on-update="cascade" nullable="0"/>
    </many-to-one>
    
    <one-to-many field="proteccionSeguridades" target-entity="AppModelBundle\Entity\proteccionSeguridad" mapped-by="procesoJuridico" orphan-removal="true">
        <cascade>
            <cascade-persist/>
        </cascade>
    </one-to-many>
    
  </entity>
</doctrine-mapping>
